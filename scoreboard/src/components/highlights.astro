---
import { formatTimestamp, formatTimestampTooltip } from '../scripts/utilities.ts';
const { highlights } = Astro.props;
---

<section>
    <h2>Highlights</h2>
    <div class="card">
        <div class="scroll-view">
            <table>
                <thead>
                    <tr>
                        <th align="center">Timestamp</th>
                        <th align="center">Data</th>
                    </tr>
                </thead>
                <tbody>
                    {
                        highlights.map((g, i) => (
                            <tr>
                                <td align="center" title={formatTimestampTooltip(g.timestamp)}>
                                    {formatTimestamp(g.timestamp)}
                                </td>
                                <td align="center">
                                    <button class="btn copy" data-pgn={g.pgn} onclick="copyPGN(this)">
                                        <img src="/MagChess/icons/copy.png" alt="Icon"/>PGN
                                    </button>
                                </td>
                            </tr>
                        ))
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>